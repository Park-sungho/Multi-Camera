<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="@string/app_name" >
        <ListPreference
            android:defaultValue="0"
            android:dialogTitle="Resolution"
            android:entries="@array/resolution"
            android:entryValues="@array/resolution_values"
            android:key="resolution_key"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="Resolution" />
        <ListPreference
            android:defaultValue="0"
            android:dialogTitle="Framerate"
            android:entries="@array/framerate"
            android:entryValues="@array/framerate_values"
            android:key="framerate_key"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="Framerate" />
        <ListPreference
            android:defaultValue="0"
            android:dialogTitle="Bitrate"
            android:entries="@array/bitrate"
            android:entryValues="@array/bitrate_values"
            android:key="bitrate_key"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="Bitrate" />
    </PreferenceCategory>

</PreferenceScreen>
